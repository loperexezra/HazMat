<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom abs theme -->

    <style name="hazmatTheme" parent="Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/hazmatTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/hazmatTheme.ActionBarStyle</item>
        <item name="absForceOverflow">true</item>
    </style>

    <style name="hazmatTheme.ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:titleTextStyle">@style/hazmatTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/hazmatTheme.ActionBar.TitleTextStyle</item>
        <item name="background">@drawable/bmp_plain</item>
        <item name="backgroundStacked">@drawable/bmp_plain</item>
        <item name="backgroundSplit">@drawable/abs__ab_bottom_transparent_light_holo</item>
        <item name="itemPadding">1dip</item>
    </style>

    <style name="hazmatTheme.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="lbc_edittext" parent="@android:style/Widget.EditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/layer_ics_edittext</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="lbc_ics_header_label">
        <item name="android:textColor">@color/ics_headers</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingBottom">4dip</item>
    </style>

    <style name="lbc_ics_button_text">
        <item name="android:textColor">@color/ics_blue_light</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ics_button">
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:background">@drawable/selector_ics_button</item>
        <item name="android:padding">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/ics_button</item>
        <item name="android:textSize">15dip</item>
    </style>

    <style name="ics_textview"></style>

    <style name="ics_edittext">
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginBottom">15dip</item>
        <item name="android:background">@drawable/layer_ics_edittext</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">@color/ics_edittext</item>
    </style>

</resources>